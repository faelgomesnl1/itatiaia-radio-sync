<style>
    .container-centralizado {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }

    .grupoCheckboxes {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 15px;
        margin: 15px 0;
    }

    .checkboxItem {
        background: #f8f9fa;
        padding: 10px 15px;
        border-radius: 5px;
        border: 1px solid #dee2e6;
        min-width: 150px;
        text-align: center;
    }

    .checkboxItem label {
        display: flex;
        align-items: center;
        gap: 8px;
        cursor: pointer;
        justify-content: center;
    }

    .checkboxItem input[type="checkbox"] {
        margin-right: 8px;
    }

    .form-centralizado {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .inputPadraoDesktop.mx-auto,
    .textarea-autoexpand.mx-auto {
        display: block;
        margin-left: auto;
        margin-right: auto;
        max-width: 600px;
    }

    .form-textareas {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .d-flex.justify-content-center.gap-4 {
        justify-content: center;
        gap: 20px;
        flex-wrap: wrap;
    }

    /* Mantenha os estilos existentes para textarea-autoexpand */
    .textarea-autoexpand {
        min-height: 100px;
        resize: none;
        overflow-y: hidden;
        width: 100%;
    }

    .botaoExcluir {
        background-color: #dc3545;
        /* vermelho Bootstrap */
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 8px;
        cursor: pointer;
        font-weight: bold;
    }

    .botaoExcluir:hover {
        background-color: #c82333;
    }
</style>

<body>
    <div class="container-centralizado">
        <div class="boxH1ResPadraoDesktop text-center">
            <div class="mesPremiadoPadraoDesktop">
                <h1 class="h1ResPadraoDesktop">Editar Evento</h1>
            </div>
            <a href="../../../profile" class="d-block mt-3">
                <button class="svgXSairTabelas" data-placement="bottom">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                        <!-- Ícone SVG permanece o mesmo -->
                    </svg>
                </button>
            </a>
        </div>

        <form action="/links/editar/editarEventoPost/{{idEvento}}" method="POST" class="form-centralizado">
            <!-- Título -->
            <div class="grupoGap8pxDesktop text-center">
                <p class="textoInputPadraoDesktop">Título:</p>
                <input type="text" name="nome" value="{{evento.titulo}}" class="inputPadraoDesktop mx-auto" required>
            </div>

            <!-- Data e Horários -->
            <div class="d-flex justify-content-center gap-4">
                <div class="grupoGap8pxDesktop">
                    <p class="textoInputPadraoDesktop text-center">Data:</p>
                    <input type="date" name="dt_inicio" value="{{evento.dataFormatada}}" class="inputPadraoDesktop"
                        required>
                </div>

                <div class="grupoGap8pxDesktop">
                    <p class="textoInputPadraoDesktop text-center">Início:</p>
                    <input type="time" name="h_inicio" value="{{evento.h_inicio}}" class="inputPadraoDesktop" required>
                </div>

                <div class="grupoGap8pxDesktop">
                    <p class="textoInputPadraoDesktop text-center">Fim:</p>
                    <input type="time" name="h_fim" value="{{evento.h_fim}}" class="inputPadraoDesktop" required>
                </div>
            </div>

            <!-- Local -->
            <div class="grupoGap8pxDesktop text-center">
                <p class="textoInputPadraoDesktop">Local:</p>
                <input type="text" name="local" value="{{evento.local}}" class="inputPadraoDesktop mx-auto" required>
            </div>

            <!-- Origens do Evento -->
            <div class="grupoGap8pxDesktop text-center">
                <p class="textoInputPadraoDesktop">Origens do Evento:</p>
                <div class="grupoCheckboxes">
                    {{#each origens}}
                    <div class="checkboxItem">
                        <label>
                            <input type="checkbox" name="origens" value="{{this.id}}" {{#if
                                this.selecionada}}checked{{/if}}>
                            {{this.nome}}
                        </label>
                    </div>
                    {{/each}}
                </div>
                <small class="text-muted">Selecione uma ou mais origens</small>
            </div>

            <!-- Campos de texto centralizados -->
            <div class="form-textareas">
                <div class="grupoGap8pxDesktop text-center">
                    <p class="textoInputPadraoDesktop">Diretriz Direção:</p>
                    <textarea name="diretriz" class="inputPadraoDesktop textarea-autoexpand mx-auto"
                        required>{{evento.diretriz}}</textarea>
                </div>

                <div class="grupoGap8pxDesktop text-center">
                    <p class="textoInputPadraoDesktop">Plataforma:</p>
                    <textarea name="Plataforma"
                        class="inputPadraoDesktop textarea-autoexpand mx-auto">{{evento.plataforma}}</textarea>
                </div>

                <div class="grupoGap8pxDesktop text-center">
                    <p class="textoInputPadraoDesktop">Dial:</p>
                    <textarea name="Dial"
                        class="inputPadraoDesktop textarea-autoexpand mx-auto">{{evento.dial}}</textarea>
                </div>

                <div class="grupoGap8pxDesktop text-center">
                    <p class="textoInputPadraoDesktop">Antes do Evento:</p>
                    <textarea name="PreEvento"
                        class="inputPadraoDesktop textarea-autoexpand mx-auto">{{evento.antes_evento}}</textarea>
                </div>

                <div class="grupoGap8pxDesktop text-center">
                    <p class="textoInputPadraoDesktop">Linha Editorial:</p>
                    <textarea name="Editorial"
                        class="inputPadraoDesktop textarea-autoexpand mx-auto">{{evento.linha_editorial}}</textarea>
                </div>

                <div class="grupoGap8pxDesktop text-center">
                    <p class="textoInputPadraoDesktop">Divulgação:</p>
                    <textarea name="Divulgacao"
                        class="inputPadraoDesktop textarea-autoexpand mx-auto">{{evento.divulgacao}}</textarea>
                </div>

                <div class="grupoGap8pxDesktop text-center">
                    <p class="textoInputPadraoDesktop">Observação:</p>
                    <textarea name="Observacao"
                        class="inputPadraoDesktop textarea-autoexpand mx-auto">{{evento.observacao}}</textarea>
                </div>
            </div>

            <div class="d-flex justify-content-center mt-4">
                <button type="submit" class="botaoPadraoDesktop">ATUALIZAR</button>
            </div>
        </form>

        <div class="d-flex justify-content-center mt-2">
            <form action="/links/editar/excluirEvento/{{idEvento}}" method="POST"
                onsubmit="return confirm('Tem certeza que deseja excluir este evento?');">
                <button type="submit" class="btn btn-danger">EXCLUIR EVENTO</button>
            </form>
        </div>
    </div>
</body>